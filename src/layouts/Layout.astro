---
import "@fontsource/montserrat/400";
import "@fontsource/montserrat/600";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>

        <!-- <meta property="og:url" content={url} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={summary} />
        <meta property="og:image" content={ogImage} /> -->

        <script is:inline src="/src/utils/handleTheme.ts"></script>
    </head>
    <body>
        <div class="root">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    :root {
        --font-family: "Montserrat", sans-serif;
        --text-size-mega: clamp(2.027rem, 5vw + 1rem, 3.815rem);
        --text-size-huge: clamp(1.802rem, 4vw + 1rem, 3.052rem);
        --text-size-xlarge: clamp(1.602rem, 3vw + 1rem, 2.441rem);
        --text-size-large: clamp(1.424rem, 2.5vw + 1rem, 1.953rem);
        --text-size-medium: clamp(1.266rem, 2vw + 1rem, 1.563rem);
        --text-size-small: clamp(1.125rem, 1.5vw + 1rem, 1.25rem);
        --text-size-base: 1rem;

        --neutral-50: #fbfbfc;
        --neutral-100: #f3f3f5;
        --neutral-200: #e8e8ea;
        --neutral-300: #dcdce0;
        --neutral-400: #d1d1d6;
        --neutral-500: #b2b2ba;
        --neutral-600: #a0a0b0;
        --neutral-700: #565660;
        --neutral-800: #2b2b30;
        --neutral-900: #161618;
        --primary-500: #ea4c89;

        --success-500: #4caf50;

        --border-radius-out: 5px;
        --border-radius-in: 2.5px;

        --max-width: 1200px;

        color-scheme: dark;
    }

    :root.light {
        color-scheme: light;
    }

    *,
    *::before,
    *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    article,
    aside,
    details,
    dialog,
    figcaption,
    figure,
    footer,
    header,
    hgroup,
    main,
    menu,
    nav,
    section,
    summary,
    template,
    video,
    audio,
    canvas,
    picture {
        display: block;
    }

    ul,
    ol {
        padding-left: 0;
        list-style: none;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    button,
    input,
    select,
    textarea {
        font-family: inherit;
        font-size: inherit;
        line-height: normal;
        border: none;
        background: none;
        color: inherit;
    }

    button,
    a,
    input[type="button"],
    input[type="reset"],
    input[type="submit"],
    input[type="checkbox"],
    input[type="radio"] {
        cursor: pointer;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
    }

    blockquote,
    q {
        quotes: none;
    }

    blockquote::before,
    blockquote::after,
    q::before,
    q::after {
        content: "";
        content: none;
    }

    dialog {
        background: light-dark(var(--neutral-50), var(--neutral-900));
        border: none;
    }

    template {
        display: none;
    }

    body {
        font-family: var(--font-family);
        font-size: var(--text-size-base);
        line-height: 1.7;
        background-color: light-dark(var(--neutral-50), var(--neutral-900));
        color: light-dark(var(--neutral-900), var(--neutral-50));
        transition:
            background-color 0.3s ease-in-out,
            color 0.3s ease-in-out;
    }

    :is(h1, h2, h3, h4, h5, h6) {
        font-weight: 600;
        line-height: 1.2;
    }

    .root {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        min-height: 100dvh;
    }
</style>
