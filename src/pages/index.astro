<Layout title="AluEncrypt">
    <Header />
    <main>
        <WriteText />
        <SeeText />
    </main>
    <Footer />
</Layout>

<style>
    main {
        flex: 1;
        align-self: center;
        padding: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        width: min(calc(var(--max-width) + 2rem), 100%);
    }
</style>
