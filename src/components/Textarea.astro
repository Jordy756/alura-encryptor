---
type Props = {
    id: string;
    placeholder?: string;
    readonly?: boolean;
};

const { id, placeholder, readonly } = Astro.props;
---

<textarea id={id} placeholder={placeholder} readonly={readonly}></textarea>

<style>
    textarea {
        flex: 1;
        width: 100%;
        min-height: 500px;
        padding: 0.5rem;
        border: none;
        resize: none;
        border-radius: 5px;
        background-color: transparent;
    }

    textarea:read-only {
        height: 100%;
        color: var(--black-color);
    }
</style>
