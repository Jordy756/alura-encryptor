---
import ToggleThemeIcon from "./icons/ToggleThemeIcon.astro";
---

<header>
    <nav>
        <h1>AluEncrypt</h1>
        <button id="toggle-theme-btn" aria-label="Toggle theme">
            <ToggleThemeIcon width={24} />
        </button>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        padding: 1rem;
        border-bottom: 1px solid light-dark(var(--neutral-200), var(--neutral-800));
    }

    header > nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
        width: min(var(--max-width), 100%);
    }

    header > nav > h1 {
        font-size: var(--text-size-huge);
        color: var(--primary-500);
    }
</style>
