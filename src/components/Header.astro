---
import ToggleThemeIcon from "@icons/ToggleThemeIcon.astro";
import Image from "astro/components/Image.astro";
---

<header>
    <h1>AluEncrypt</h1>
    <nav>
        <a href="/#">
            <Image src="/favicon.svg" alt="Ãcono de AluEncrypt" width={40} height={40} />
        </a>
        <button id="toggle-theme-btn" aria-label="Cambiar tema" title="Cambiar tema">
            <ToggleThemeIcon width={24} />
        </button>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        padding: 1rem;
        border-bottom: 1px solid light-dark(var(--neutral-200), var(--neutral-800));
        transition: border-color 0.3s ease-in-out;
    }

    header > h1 {
        position: absolute;
        width: 1px;
        height: 1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
    }

    header > nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
        width: min(var(--max-width), 100%);
    }

    header > nav > a,
    header > nav > a > img,
    header > nav > button {
        display: flex;
    }

    header > nav {
        font-size: var(--text-size-xlarge);
    }
</style>

<script src="../scripts/components/header.ts"></script>
