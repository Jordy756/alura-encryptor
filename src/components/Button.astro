---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
    variant?: "primary" | "secondary";
}

const { variant = "primary", class: className, ...props } = Astro.props;
---

<button class:list={[variant, className]} {...props}>
    <slot />
</button>

<style>
    button {
        flex: 1;
        border-radius: var(--border-radius-out);
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
    }

    .primary {
        padding: 16px 32px;
        background-color: var(--primary-500);
        color: var(--neutral-50);
        transition:
            opacity 0.3s ease-in-out,
            background-color 2s ease-in-out;

        &:hover {
            opacity: 0.8;
        }

        &:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }
    }

    .secondary {
        padding: 15px 31px;
        color: light-dark(var(--neutral-700), var(--neutral-400));
        border: 1px solid light-dark(var(--neutral-200), var(--neutral-800));
        transition:
            color 0.1s ease-in-out,
            border-color 0.3s ease-in-out;

        &:hover {
            color: light-dark(var(--neutral-900), var(--neutral-50));
            border-color: light-dark(var(--neutral-900), var(--neutral-50));
        }

        &:disabled {
            cursor: not-allowed;
            color: light-dark(var(--neutral-700), var(--neutral-400));
            border-color: light-dark(var(--neutral-200), var(--neutral-800));
            opacity: 0.6;
        }
    }
</style>
