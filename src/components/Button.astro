---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
    variant?: "primary" | "secondary";
}

const { variant = "primary", class: className, ...props } = Astro.props;
---

<button class:list={[variant, className]} {...props}>
    <slot />
</button>

<style>
    button {
        flex: 1;
        border-radius: var(--border-radius-out);
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
    }

    .primary {
        padding: 12px 24px;
        background-color: var(--primary-500);
        color: var(--neutral-50);
        transition: opacity 0.3s ease-in-out;

        &:hover {
            opacity: 0.8;
        }
    }

    .secondary {
        padding: 11px 23px;
        color: light-dark(var(--neutral-400), var(--neutral-700));
        border: 1px solid light-dark(var(--neutral-800), var(--neutral-200));
        transition:
            color 0.3s ease-in-out,
            border 0.3s ease-in-out;

        &:hover {
            color: light-dark(var(--neutral-50), var(--neutral-900));
            border: 1px solid light-dark(var(--neutral-50), var(--neutral-900));
        }
    }
</style>
