---
import Copy from "@/assets/icons/Copy.astro";
import Button from "@/components/Button.astro";
import Textarea from "@/components/Textarea.astro";
import { Image } from "astro:assets";
import dollImage from "@/assets/images/doll.webp";
---

<section>
    <Textarea id="output-text" readonly />
    <div class="no-message-found-container">
        <Image src={dollImage} alt="Ningún mensaje fue encontrado" />
        <h4>Ningún mensaje fue encontrado</h4>
        <p>Ingresa el texto que desees encriptar o desencriptar.</p>
    </div>
    <div class="message-found-container">
        <Button id="btn-copy-to-clipboard" className="btn-primary">
            <Copy />
            Copiar
        </Button>
    </div>
</section>

<script src="../scripts/handleClipboard.ts"></script>

<style>
    section {
        border-radius: 5px;
        flex: 1;
        min-width: 300px;
        position: relative;
        background-color: var(--white-color);
        color: var(--black-color);
        box-shadow: 0 0 10px 5px var(--primary-color);
    }

    .no-message-found-container,
    .message-found-container {
        position: absolute;
        width: 100%;
        padding: 1rem;
        display: flex;
    }

    .no-message-found-container {
        top: 50%;
        transform: translateY(-50%);
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .no-message-found-container > img {
        max-width: 100%;
        max-height: 200px;
        object-fit: cover;
        aspect-ratio: 16 / 9;
        object-position: top;
    }

    .message-found-container {
        bottom: 0;
        display: none;
    }

    h4,
    p {
        text-align: center;
    }

    @media screen and (max-width: 768px) {
        .no-message-found-container > img {
            display: none;
        }
    }
</style>
