---
import Button from "@components/Button.astro";
import WarningIcon from "@components/icons/WarningIcon.astro";
---

<section>
    <div class="input-text-container">
        <label for="input-text">Texto de entrada</label>
        <textarea id="input-text" placeholder="Ingresa el texto a encriptar o desencriptar"></textarea>
    </div>
    <span>
        <WarningIcon width={20} height={20} />
        Solo letras min√∫sculas y sin acento
    </span>
    <div class="buttons-container">
        <Button id="btn-encrypt">Encriptar</Button>
        <Button id="btn-decrypt" variant="secondary">Desencriptar</Button>
    </div>
</section>

<script src="../scripts/handleEncryption.ts"></script>

<style>
    section {
        flex: 3 250px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    section > .input-text-container {
        flex: 1;
        position: relative;
    }

    section > .input-text-container > label {
        position: absolute;
        pointer-events: none;
        opacity: 0;
    }

    section > .input-text-container > textarea {
        width: 100%;
        height: 100%;
        min-height: 300px;
        padding: 1rem;
        border: none;
        resize: none;
        outline: none;
        border-radius: var(--border-radius-out);
        background-color: light-dark(var(--neutral-800), var(--neutral-100));
    }

    section > span {
        font-size: 0.875rem;
        color: light-dark(var(--neutral-50), var(--neutral-900));
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    section > .buttons-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
</style>
