---
import Button from "@/components/Button.astro";
import Textarea from "@/components/Textarea.astro";
---

<section>
    <Textarea id="input-text" placeholder="Ingresa el texto a encriptar o desencriptar" />
    <span>⚠ Solo letras minúsculas y sin acento</span>
    <div>
        <Button id="btn-encrypt" className="btn-primary">Encriptar</Button>
        <Button id="btn-decrypt" className="btn-secondary">Desencriptar</Button>
    </div>
</section>

<script src="../scripts/handleEncryption.ts"></script>

<style>
    section {
        min-width: 300px;
        flex: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    section > div {
        max-width: 500px;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
</style>
