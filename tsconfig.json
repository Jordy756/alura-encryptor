{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@icons/*": ["src/components/icons/*"],
            "@layouts/*": ["src/layouts/*"],
            "@scripts/*": ["src/scripts/*"],
            "@sections/*": ["src/sections/*"],
            "@definitions/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
